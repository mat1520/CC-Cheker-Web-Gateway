# Environment Configuration - Demo Version
# Copy this file to .env and configure for your environment

# Demo Mode (Always True for this version)
DEMO_MODE=true

# Flask Configuration
FLASK_APP=api/index.py
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=demo_secret_key_change_in_production

# Database Configuration (Demo)
DATABASE_URL=sqlite:///demo_cc_checker.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100
API_TIMEOUT=30

# Security Settings (Demo)
JWT_SECRET_KEY=demo_jwt_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600
BCRYPT_LOG_ROUNDS=12

# Gateway Configuration (Demo - All placeholder values)
# Stripe
STRIPE_API_KEY=demo_stripe_key_sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=demo_stripe_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=demo_paypal_client_id
PAYPAL_CLIENT_SECRET=demo_paypal_client_secret
PAYPAL_MODE=sandbox

# Square
SQUARE_ACCESS_TOKEN=demo_square_access_token
SQUARE_ENVIRONMENT=sandbox

# Authorize.Net
AUTHNET_API_LOGIN_ID=demo_authnet_login
AUTHNET_TRANSACTION_KEY=demo_authnet_key

# Braintree
BRAINTREE_MERCHANT_ID=demo_braintree_merchant
BRAINTREE_PUBLIC_KEY=demo_braintree_public
BRAINTREE_PRIVATE_KEY=demo_braintree_private

# Telegram Bot Configuration (Demo)
TELEGRAM_BOT_TOKEN=demo_bot_token_1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Redis Configuration (Demo)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=demo_redis_password

# Email Configuration (Demo)
SMTP_HOST=smtp.demo.com
SMTP_PORT=587
SMTP_USERNAME=demo@example.com
SMTP_PASSWORD=demo_email_password
SMTP_FROM_EMAIL=noreply@ccchecker.demo

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/demo_cc_checker.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring (Demo)
SENTRY_DSN=demo_sentry_dsn_url
PROMETHEUS_PORT=9090

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=txt,csv

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
DEFAULT_RATE_LIMIT=100 per hour

